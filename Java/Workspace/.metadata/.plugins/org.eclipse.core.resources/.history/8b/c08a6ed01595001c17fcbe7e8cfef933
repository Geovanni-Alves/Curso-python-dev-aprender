
public class TesteConstrutor {

	public static void main(String[] args) {
		Pessoa p1 = new Pessoa();
		
		System.out.println("nome: \"" + p1.nome + "\" tem " + p1.idade + " anos." );
		
		p1.nome = "Geovanni";
		p1.idade = 37;
				
		System.out.println("nome: \"" + p1.nome + "\" tem " + p1.idade + " anos." );
		System.out.println(p1.nomear());
	}

}
