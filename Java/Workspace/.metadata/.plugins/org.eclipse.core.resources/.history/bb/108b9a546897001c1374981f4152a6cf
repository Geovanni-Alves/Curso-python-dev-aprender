public class Principal {
	
	public static void main(String[] args) {
		Fornecedor imobiliaria = new Fornecedor ();
		imobiliaria.setNome("Casa e Cia negocios imobiliarios");
		
		Fornecedormercado = new Fornecedor();
		mercado.setNome("MercadodoJoão");
		
		ContaPagarconta1 = new ContaPagar();
		conta1.setDescricao("Alugueldamatriz");
		conta1.setValor(1230d);
